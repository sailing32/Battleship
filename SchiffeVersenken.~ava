class SchiffeVersenken{
  public static void main(String args[]) { 
      //Anzahl der Schiffsteile
      int schiffsanzahl=0;
      int schussergebnis=0;
      int getroffenanzahl1=0;
      int getroffenanzahl2=0;
      int []koordinaten =new int[2];
   
      System.out.println ("Das Spiel beginnt!");
      System.out.println ("-------------------------------");

      //Festlegung der erlaubten Schiffsteile
      System.out.print ("Mit wievielen Schiffsteilen soll gespielt werden? ");
      schiffsanzahl = IOUtils.readInt(); 

      System.out.println ("Die Schiffskarte ist 10x10 Kaestchen gross und kann bis zu "+schiffsanzahl+" Schiffe beinhalten."); 

      //2 Spieler werden erzeugt indem die jeweiligen Konstruktoren aufgerufen werden
      Spieler spieler1 = new Spieler("Spieler1", schiffsanzahl);
      Spieler spieler2 = new Spieler("Spieler2", schiffsanzahl);

      //beide Spieler verteilen ihre Schiffe
      spieler1.schiffeverteilen();
      spieler2.schiffeverteilen();
      
      System.out.println ("Ihre Schiffskarten sehen wie folgt aus:");
      spieler1.ausdruckSchiffskarte();
      spieler2.ausdruckSchiffskarte();

      System.out.println ("Ihre Feindkarten sehen wie folgt aus:");
      spieler1.ausdruckFeindkarte();
      spieler2.ausdruckFeindkarte();
      
      //Spielbeginn
      //das Spiel geht solange, bis ein Spieler alle Schiffe des anderen abgeschossen hat
      while (getroffenanzahl1 != schiffsanzahl && getroffenanzahl2 != schiffsanzahl) {

           //Spieler1 beginnt zu schiessen
           koordinaten=spieler1.schuss();
           schussergebnis=spieler2.auswertung(koordinaten);
           getroffenanzahl1=getroffenanzahl1+schussergebnis;
           spieler1.eintraginFeindkarte(schussergebnis,koordinaten);
           spieler1.ausdruckFeindkarte();

           //Spieler2 beginnt zu schiessen
           koordinaten=spieler2.schuss();
           schussergebnis=spieler1.auswertung(koordinaten);
           getroffenanzahl2=getroffenanzahl2+schussergebnis;
           spieler2.eintraginFeindkarte(schussergebnis,koordinaten);
           spieler2.ausdruckFeindkarte();           
      }// Ende while

      //Spielende, wenn ein Spieler alle Schiffe des Gegners getroffen hat
      //es wird ermittelt, welcher Spieler gewonnen hat
      if (getroffenanzahl1 == schiffsanzahl){
           System.out.println ("*****************************");
           System.out.println ("  Spieler 1 hat gewonnen!");
           System.out.println ("*****************************");
      } else {
           System.out.println ("*****************************");
           System.out.println ("  Spieler 2 hat gewonnen!");
           System.out.println ("*****************************");
      }
   }//Ende SchiffeVersenken
}// Ende Klasse